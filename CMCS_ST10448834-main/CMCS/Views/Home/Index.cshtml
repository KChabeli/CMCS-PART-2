@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0 text-primary">
                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
            </h1>
            <a asp-action="SubmitClaim" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Submit New Claim
            </a>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-warning shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-clock fa-2x text-warning"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title text-warning">Pending Claims</h5>
                        <h2 class="mb-0">@ViewBag.PendingCount</h2>
                        <small class="text-muted">Awaiting approval</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-success shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-check-circle fa-2x text-success"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title text-success">Approved Claims</h5>
                        <h2 class="mb-0">@ViewBag.ApprovedCount</h2>
                        <small class="text-muted">Successfully processed</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-danger shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-times-circle fa-2x text-danger"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title text-danger">Rejected Claims</h5>
                        <h2 class="mb-0">@ViewBag.RejectedCount</h2>
                        <small class="text-muted">Require attention</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-tasks me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 col-lg-3 mb-3">
                        <div class="d-grid">
                            <a asp-action="SubmitClaim" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-plus-circle fa-2x mb-2"></i><br>
                                Submit Claim
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-3">
                        <div class="d-grid">
                            <a asp-action="VerifyClaims" class="btn btn-outline-success btn-lg">
                                <i class="fas fa-check-circle fa-2x mb-2"></i><br>
                                Verify Claims
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-3">
                        <div class="d-grid">
                            <a asp-action="TrackClaims" class="btn btn-outline-info btn-lg">
                                <i class="fas fa-search fa-2x mb-2"></i><br>
                                Track Claims
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-3">
                        <div class="d-grid">
                            <a href="#" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-file-upload fa-2x mb-2"></i><br>
                                Upload Documents
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>System Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-primary">Welcome to Contract Monthly Claim System</h6>
                        <p class="text-muted">
                            This system allows lecturers to submit their monthly claims,
                            coordinators to verify and approve claims, and provides
                            transparent tracking of claim status throughout the process.
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-primary">Key Features</h6>
                        <ul class="list-unstyled text-muted">
                            <li><i class="fas fa-check text-success me-2"></i>Easy claim submission</li>
                            <li><i class="fas fa-check text-success me-2"></i>Document upload support</li>
                            <li><i class="fas fa-check text-success me-2"></i>Real-time status tracking</li>
                            <li><i class="fas fa-check text-success me-2"></i>Approval workflow</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
